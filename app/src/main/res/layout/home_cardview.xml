<androidx.cardview.widget.CardView android:id="@+id/cardViewHome"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="15dp"
    app:cardElevation="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/imageViewHome"
            android:scaleType="centerCrop"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHomeTitle"
            android:textSize="20sp"
            android:singleLine="true"
            android:text="Title"
            android:layout_toRightOf="@id/imageViewHome"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHomeRating"
            android:textSize="18sp"
            android:text="Rate"
            android:layout_below="@+id/textViewHomeTitle"
            android:layout_toRightOf="@id/imageViewHome"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_star_24"
            android:layout_toRightOf="@id/textViewHomeRating"
            android:layout_below="@id/textViewHomeTitle"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHomePrice"
            android:textSize="18sp"
            android:text="Price"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/textViewHomeRating"
            android:layout_toRightOf="@id/imageViewHome"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageViewHomeArrow"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/textViewHomeRating"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
            />




    </RelativeLayout>



</androidx.cardview.widget.CardView>